/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 搜索框 */
.searchRoot {
  padding: 25rpx; 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.searchInput {
  flex: 1;
  height: 70rpx;
  padding-left: 30rpx;
  border: 1px solid #f4c903;
  border-radius: 30rpx;
}
.searchImg{
  width: 70rpx;
  height: 70rpx;
  margin: 0 15rpx;
}

.voteButtons{
  margin-top: 40rpx;
}
.buttonGroup{
  display: flex;
  flex-direction: row;
}