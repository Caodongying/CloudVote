/* pages/voteselectshare/voteselectshare.wxss */
.cover{
    width:100%;
    height:136px;
}

.voteTitle{
    text-align: center;
    margin:5px 0px;
    color:coral;
    font-weight: bolder;  
}

.timeInfo{
    background-color: rgb(230, 230, 230);
    margin:10px 20px;
    padding: 10px 0;
    display: flex;
    flex-flow: column;
    text-align: center;
}

.timetop-Info{
    font-size: 18px;
    color:rgb(61, 60, 60);
}

.totalInfo{
    display: flex;
    flex-flow: row;
    text-align: center;
    margin:15px 5px 0px 5px;
}

.left-Info{
    display: flex;
    flex-flow: column;
    margin-left: 30rpx;
    float: left;
    width:375rpx;
}

.right-Info{
    display: flex;
    flex-flow: column;
    margin-right: 30rpx;
    float: right;
    width:375rpx;
}

.info-num{
    font-size: 25px;
    color:#ff7f50;
}

.info-title{
    font-size: small;
    color: grey;
}

.button{
    display: flex;
    margin: 10px 0;
}

.searchRoot {
    padding: 25rpx; 
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.searchInput {
    flex: 1;
    height: 70rpx;
    padding-left: 30rpx;
    border: 1px solid #f4c903;
    border-radius: 30rpx;
}
.searchImg{
    width: 70rpx; 
    height: 70rpx;
    margin: 0 15rpx;
}

/* .bottomTab{
    position: fixed;
    bottom:0;
    width: 100%;
    border-top: solid 3px rgb(224, 224, 224);
} */

.moreInfo{
    margin: 10px 0px 15px 16px;
    font-size: 14px;
}

.outer{
    width:750rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.oneCandidate{
    display: flex;
    flex-flow: column;
    align-content: center;
    width:330rpx;
    margin-top:10px;
    /* padding:0 20rpx 0 20rpx; */
    background-color: whitesmoke;
}

.picture-item{
    margin-top:10px;
    text-align: center;
}

.name{
    text-align: center;
    font-size: 14px;
    font-weight: bolder;
    color:rgb(100, 100, 100)
}

.voteNum{
    text-align: center;
    font-size: 13px;
    color:rgb(94, 94, 94);
    margin:2px 0 4px 0;
}

.rank-item{
    display: flex;
    flex-flow: row;
    align-items: center;
    margin-bottom: 25rpx;
}
.rankListNote{
    font-weight: bolder;
    font-size: 14px;
    color:red;
    display: flex;
    flex-flow: row;
    justify-content: center;
    margin: 8px 0px;
}

.rank{
    margin: 0px 10px 0px 20rpx;
    font-weight: bolder;
}

.rankUserImage{
    margin:0px 30rpx 0 0;
}

.content{
    /* margin-right: 30rpx; */
    width:200rpx;
    display: inline-block;
    /* 解决设置inline-block后与行内其他元素不在同一水平线的问题 */
    vertical-align:top;
    white-space:nowrap;
    /* 超出隐藏 */
    overflow:hidden;
    /*超出显示为省略号*/
    text-overflow:ellipsis;
}


.num{
    position: absolute;
    right:40rpx;
    text-align:right
}


